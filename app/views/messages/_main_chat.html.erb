<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      <%= @room.name%>
    </div>
  </div>
  <div class="right-header">
    <div class="chat-close">
      <%= link_to "チャットを終了する", room_path(@room), method: :delete %>
    </div>
  </div>
</div>

<div class="messages">
  <div class="message">
    <div class="upper-message">
      <div class="message-user">Tom</div>
      <div class="message-date">2020/3/31(Wed)12:43:30</div>
    </div>
    <div class="lower-message">
      <div class="message-content">おはよう</div>
    </div>
  </div>
  <div class="message">
    <div class="upper-message">
      <div class="message-user">Sim</div>
      <div class="message-date">2020/3/31(Wed)12:43:30</div>
    </div>
    <div class="lower-message">
      <div class="message-content">こんばんは</div>
    </div>
  </div>
</div>

<div class="form">
  <div class="form-inputs">
    <input class="form-message" placeholder="type a message">
    <label class="form-image">
      <span class="image-file">画像</span>
      <input type="file" class="image-box   ">
    </label>
  </div>
  <input class="form-submit" type="submit" value="送信">
</div>